<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.px.videoapp.VideoSmipleActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:visibility="gone"
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入文件路径"/>

        <com.example.px.videoapp.FixVideoView
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

    </LinearLayout>
        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="selflie"
            android:text="选择路径"/>
        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="DoFinish"
            android:text="返回"/>
        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="DoConnectServer"
            android:text="重新连接服务器"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/connect_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未连接服务器"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>